<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/title_start_page"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/door_a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/door_a"
                    android:onClick="onDoorSelection"
                    android:scaleType="centerInside"
                    android:tag="1"
                    app:srcCompat="@drawable/door_close" />

                <TextView
                    android:id="@+id/door_a_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/door_a"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/door_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/door_b"
                    android:onClick="onDoorSelection"
                    android:scaleType="centerInside"
                    android:tag="2"
                    app:srcCompat="@drawable/door_close" />

                <TextView
                    android:id="@+id/door_b_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/door_b"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/door_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/door_c"
                    android:onClick="onDoorSelection"
                    android:scaleType="centerInside"
                    android:tag="3"
                    app:srcCompat="@drawable/door_close" />

                <TextView
                    android:id="@+id/door_c_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/door_c"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/info_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/button_a_propos"
        android:textAlignment="center"
        android:textColor="#fff"
        android:onClick="getInformationLink"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>